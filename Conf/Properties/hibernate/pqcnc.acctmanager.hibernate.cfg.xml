        <mapping resource="Users.hbm.xml"/>
        <mapping resource="ClientSiteUsers.hbm.xml"/>
        <mapping resource="DeviceAssignment.hbm.xml"/>
        <mapping resource="Patients.hbm.xml"/>
        <mapping resource="CMSFeedBack.hbm.xml"/>
	</session-factory>
</hibernate-configuration>

